<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_38"
        android:background="@color/DodgerBlue"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:id="@+id/tv_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_sd_storage"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:background="@drawable/sdcard_icon"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_u_storage"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_marginStart="@dimen/dp_10"
                android:background="@drawable/storage_icon"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        android:text="@string/system_log"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/sp_11" />

    <RelativeLayout
        android:id="@+id/layout_start_logcat"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_2"
        android:background="@drawable/background_border_top_and_bottom"
        android:clickable="true">

        <TextView
            android:id="@+id/tv_log_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/sw_log_save"
            android:paddingStart="@dimen/dp_10"
            android:text="@string/start_log_save"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_12" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/sw_log_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:clickable="false"
            android:enabled="false"
            android:thumb="@drawable/switch_thumb" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_clear_log"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_28"
        android:background="@drawable/background_border_bottom"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_10"
        android:text="@string/clear_log"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_export_log"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_28"
        android:background="@drawable/background_border_bottom"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_10"
        android:text="@string/log_export"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_12" />
</LinearLayout>