<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_38"
        android:background="@color/DodgerBlue"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:id="@+id/tv_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_sd_storage"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:background="@drawable/sdcard_icon"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_u_storage"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_marginStart="@dimen/dp_10"
                android:background="@drawable/storage_icon"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:text="@string/boot_animation_title"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/sp_11" />

            <RelativeLayout
                android:id="@+id/layout_set_bootanim"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_28"
                android:layout_marginTop="@dimen/dp_2"
                android:background="@drawable/background_border_top_and_bottom">

                <TextView
                    android:id="@+id/tv_set_bootanim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tv_bootanim_path"
                    android:paddingStart="@dimen/dp_10"
                    android:text="@string/boot_animation_set"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_bootanim_path"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_toStartOf="@+id/iv_select_bootanim"
                    android:maxWidth="@dimen/dp_400"
                    android:maxLines="1"
                    android:minWidth="@dimen/dp_100"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_10" />

                <ImageView
                    android:id="@+id/iv_select_bootanim"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:padding="@dimen/dp_3"
                    android:src="@drawable/openfile_icon" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_reset_bootanim"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_28"
                android:background="@drawable/background_border_bottom"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_10"
                android:text="@string/boot_animation_reset"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:text="@string/boot_video_title"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/sp_11" />

            <RelativeLayout
                android:id="@+id/layout_set_bootvideo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_28"
                android:layout_marginTop="@dimen/dp_2"
                android:background="@drawable/background_border_top_and_bottom">

                <TextView
                    android:id="@+id/tv_set_bootvideo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tv_bootvideo_path"
                    android:paddingStart="@dimen/dp_10"
                    android:text="@string/boot_video_set"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_bootvideo_path"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_toStartOf="@+id/iv_select_bootvideo"
                    android:maxWidth="@dimen/dp_400"
                    android:maxLines="1"
                    android:minWidth="@dimen/dp_100"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_10" />

                <ImageView
                    android:id="@+id/iv_select_bootvideo"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:padding="@dimen/dp_3"
                    android:src="@drawable/openfile_icon" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_reset_bootvideo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_28"
                android:background="@drawable/background_border_bottom"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_10"
                android:text="@string/boot_video_reset"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:text="@string/boot_logo_title"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/sp_11" />

            <RelativeLayout
                android:id="@+id/layout_set_bootlogo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_28"
                android:layout_marginTop="@dimen/dp_2"
                android:background="@drawable/background_border_top_and_bottom">

                <TextView
                    android:id="@+id/tv_set_bootlogo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tv_bootlogo_path"
                    android:paddingStart="@dimen/dp_10"
                    android:text="@string/boot_logo_set"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_bootlogo_path"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_toStartOf="@+id/iv_select_logo"
                    android:maxWidth="@dimen/dp_400"
                    android:maxLines="1"
                    android:minWidth="@dimen/dp_100"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_10" />

                <ImageView
                    android:id="@+id/iv_select_logo"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:padding="@dimen/dp_3"
                    android:src="@drawable/openfile_icon" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_reset_bootlogo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_28"
                android:background="@drawable/background_border_bottom"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_10"
                android:text="@string/boot_logo_reset"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_reset_system"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_28"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/background_border_top_and_bottom"
                android:gravity="center"
                android:text="@string/reboot_system"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>