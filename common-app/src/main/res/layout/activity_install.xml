<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_38"
        android:background="@color/DodgerBlue"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:id="@+id/tv_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="DWIN Android Test"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_sd_storage"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:visibility="gone"
                android:background="@drawable/sdcard_icon" />

            <ImageView
                android:id="@+id/iv_u_storage"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:visibility="gone"
                android:layout_marginStart="@dimen/dp_10"
                android:background="@drawable/storage_icon" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        android:text="@string/install_apps_silently"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/sp_11" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_2"
        android:background="@drawable/background_border_top_and_bottom">

        <TextView
            android:id="@+id/tv_select_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_select_app_path"
            android:paddingStart="@dimen/dp_10"
            android:text="@string/select_application"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_select_app_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_toStartOf="@+id/iv_select_app"
            android:maxWidth="@dimen/dp_400"
            android:maxLines="1"
            android:minWidth="@dimen/dp_100"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/sp_10" />

        <ImageView
            android:id="@+id/iv_select_app"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:padding="@dimen/dp_3"
            android:src="@drawable/openfile_icon" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_install_app"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_28"
        android:background="@drawable/background_border_bottom"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_10"
        android:text="@string/install_application"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_12" />

</LinearLayout>

